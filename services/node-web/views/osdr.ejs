<%- include('layouts/main', { title: 'OSDR Datasets', body: `
<div class="container">
    <h2 class="mb-4">NASA OSDR Datasets</h2>
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Dataset ID</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Updated</th>
                </tr>
            </thead>
            <tbody>
                <% if (items && items.length > 0) { %>
                    <% items.forEach((item, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><code><%= item.dataset_id || '—' %></code></td>
                            <td><%= item.title || '—' %></td>
                            <td><span class="badge bg-secondary"><%= item.status || '—' %></span></td>
                            <td><%= item.updated_at ? new Date(item.updated_at).toLocaleDateString('ru-RU') : '—' %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-muted text-center py-4">
                            Нет данных. Запустите синхронизацию OSDR.
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    
    <div class="mt-3">
        <a href="/dashboard" class="btn btn-outline-primary">← Назад на Dashboard</a>
    </div>
</div>
` }) %>
